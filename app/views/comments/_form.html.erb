<%= simple_form_for([@shot, @shot.comments.build]) do |f| %>
  <div class="user-thumb">
    <%= gravatar_image_tag(current_user.email.gsub('spam', 'mdeering'), alt: current_user.name, gravatar: { size: 20 }); %>
  </div>
  <div class="user-name has-text-weight-bold">
    <%= current_user.name %>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :response, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>

  <%= f.button :submit, 'Leave a reply', class: 'button is-primary' %>

<% end %>